/* pages/view2/view2.wxss */
.view2-for{
  width: 750rpx;
  height:150rpx;
  position: relative;
  border: 1px solid #000;
  background-color: #ccc;
}
.view2-for .view2-text {
  line-height: 150rpx;
  font-size: 16px;
}
.view2-for span{
  color: red;
  font-weight: 400;
}
.view2-for .view2-image{
  opacity: 0.8;
  position: absolute;
  width: 300rpx;
  height: 150rpx;
  right: 0px;
}
.view2 .footer{
  position: absolute;
  bottom: -50px;
  padding-top: 12px;
  box-sizing: border-box;
  width: 100%;
  height: 50px;
  text-align: center;
  background-color: gray;
  font: 16px 宋体;
  color: #aaa;
}